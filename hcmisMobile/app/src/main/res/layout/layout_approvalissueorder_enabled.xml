<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_stockedout_row"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/approveIssueOrder_rowno_enabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="1" />

    <TextView
        android:id="@+id/approveIssueOrder_ItemColumn_enabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="2" />

    <TextView
        android:id="@+id/approveIssueOrder_Unit_enabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="0.55"
        android:text="3" />

    <TextView
        android:id="@+id/approveIssueOrder_sohColumn_enabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="4" />

    <TextView
        android:id="@+id/approveIssueOrder_requestedQtyColumn_enabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="5" />

    <EditText
        android:id="@+id/approveIssueOrder_approvedQtyColumn_enabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@drawable/inputtextdrawable"
        android:digits="1234567890"
        android:gravity="end"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="6"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:text="6"
        android:textSize="@dimen/primaryTextSize" />
</LinearLayout>