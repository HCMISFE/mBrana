<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/noPadding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jsi.mbrana.Workflow.Issue.Depreciated.IssueActivity"
    tools:showIn="@layout/activity_issue">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:orientation="vertical"
        android:paddingTop="25dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:background="@drawable/roundedborder"
                android:id="@+id/IssueOptions_newOrder">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="text1"
                    android:layout_gravity="left"
                    android:textSize="13dp"
                    android:height="80dp"
                    android:gravity="bottom"
                    android:adjustViewBounds="true"
                    android:scaleType="fitEnd"
                    android:background="@android:drawable/ic_input_add">

                </ImageView>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="New Order"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <View
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:background="@color/gray2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:background="@drawable/roundedborder"
                android:id="@+id/IssueOptions_pendingOrder">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="text1"
                    android:layout_gravity="left"
                    android:textSize="13dp"
                    android:height="80dp"
                    android:gravity="bottom"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:background="@android:drawable/ic_menu_agenda">

                </ImageView>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Draft Orders"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:background="@drawable/roundedborder"
                android:id="@+id/IssueOptions_approveOrder">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="text1"
                    android:layout_gravity="left"
                    android:textSize="13dp"
                    android:height="80dp"
                    android:gravity="bottom"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:background="@android:drawable/ic_menu_set_as">

                </ImageView>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Pending Approval"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <View
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:background="@color/gray2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:background="@drawable/roundedborder"
                android:id="@+id/IssueOptions_IssueOrder">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="text1"
                    android:layout_gravity="left"
                    android:textSize="13dp"
                    android:height="80dp"
                    android:gravity="bottom"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:background="@android:drawable/ic_menu_upload">

                </ImageView>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Pending Issue"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
