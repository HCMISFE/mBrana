<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/xPaddingSize"
    android:paddingRight="@dimen/xRPaddingSize"
    android:paddingTop="@dimen/xPaddingSize">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:gravity="center">

        <TextView
            android:id="@+id/po_FirstLetter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_blue"
            android:gravity="center_vertical|center_horizontal"
            android:text="T"
            android:textColor="@android:color/white"
            android:textSize="@dimen/firstLetterTextSize"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/smallPadding"
        android:paddingTop="@dimen/smallPadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/po_ponocolumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_weight="0.23"
                android:text="Facility"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/po_fillrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="75%"
                android:textColor="@color/gray4"
                android:textSize="@dimen/secondaryTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/po_poDatecolumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="right"
                android:text="Date"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/po_posuppliercolumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:text="supplier"
                android:textColor="@color/gray4"
                android:textSize="@dimen/secondaryTextSize" />

            <TextView
                android:id="@+id/po_itemCountColumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="Items"
                android:textColor="@color/gray4"
                android:textSize="@dimen/secondaryTextSize" />

            <TextView
                android:id="@+id/po_postatuscolumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center|right"
                android:text="Status"
                android:textColor="@color/gray4"
                android:textSize="@dimen/secondaryTextSize"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>