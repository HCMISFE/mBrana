<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_stockedout_row"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/approveIssueOrder_rowno_disabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="1"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/approveIssueOrder_ItemColumn_disabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="2"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/approveIssueOrder_Unit_disabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="0.55"
        android:text="3"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/approveIssueOrder_sohColumn_disabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="4"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/approveIssueOrder_requestedQtyColumn_disabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="5"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/approveIssueOrder_approvedQtyColumn_enabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@drawable/inputtextdrawable"
        android:editable="false"
        android:gravity="end"
        android:inputType="phone"
        android:maxLength="1"
        android:text="6"
        android:textIsSelectable="false"
        android:textSize="15dp" />
</LinearLayout>