<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/MenuID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Receiptcard_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            card_view:cardBackgroundColor="#33c273"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/xPaddingSize"
                android:paddingRight="@dimen/xRPaddingSize"
                android:paddingTop="@dimen/xPaddingSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward_white_36dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receipts"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/smallPadding"
                    android:paddingTop="@dimen/smallPadding">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_outstanding_receipt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="0 Outstanding"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/secondaryTextSize" />

                    <TextView
                        android:id="@+id/tv_main_confirmed_receipt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="0 Confirmed"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/secondaryTextSize" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Issuecard_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            card_view:cardBackgroundColor="#4389cf"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/xPaddingSize"
                android:paddingRight="@dimen/xRPaddingSize"
                android:paddingTop="@dimen/xPaddingSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_back_white_36dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Issues  "
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/smallPadding"
                    android:paddingTop="@dimen/smallPadding">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_main_facilities"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="0 Facilities"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/secondaryTextSize" />

                    <TextView
                        android:id="@+id/tv_main_picklisted"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="0 Picklisted"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/secondaryTextSize" />

                    <TextView
                        android:id="@+id/tv_main_confirmed_issues"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="0 Confirmed"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/secondaryTextSize" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/POcard_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            card_view:cardBackgroundColor="#e0917fcf"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/xPaddingSize"
                android:paddingRight="@dimen/xRPaddingSize"
                android:paddingTop="@dimen/xPaddingSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_playlist_add_check_white_36dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VRF"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/smallPadding">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_main_neworders"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="0 New orders"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/secondaryTextSize" />

                    <TextView
                        android:id="@+id/tv_main_processorders"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="0 In-Process orders"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/secondaryTextSize" />

                    <TextView
                        android:id="@+id/tv_main_processed"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="0 Processed"
                        android:textAlignment="viewEnd"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/secondaryTextSize" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/StockStatuscard_view4"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            card_view:cardBackgroundColor="#60aca3"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/xPaddingSize"
                android:paddingRight="@dimen/xRPaddingSize"
                android:paddingTop="@dimen/xPaddingSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.31"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_show_chart_white_36dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock Status"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/smallPadding"
                    android:paddingTop="@dimen/smallPadding">


                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Bincard_view4"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            card_view:cardBackgroundColor="#7a90ab"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/xPaddingSize"
                android:paddingRight="@dimen/xRPaddingSize"
                android:paddingTop="@dimen/xPaddingSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.38"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_compare_arrows_white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bin Card"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/smallPadding"
                    android:paddingTop="@dimen/smallPadding">


                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ChartsMainID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="3">

        <include layout="@layout/reportscontainer" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>